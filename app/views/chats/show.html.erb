
<div class="container">
  <div class="row">
    <div class='col-6 offset-1'>
      <h1 class="heading08"><span>CHAT WITH <%= @user.nickname %></span><%= @user.nickname %>様とのチャットルーム</h1>
    </div>
  </div>
    <table class="table">
      <thead class="bg-secondary">
        <tr>
          <th class="text-white" style="text-align: left; font-size: 20px;"><%= current_user.nickname %></th>
          <th class="text-white" style="text-align: right; font-size: 20px;"><%= @user.nickname %></th>
        </tr>
      </thead>
      <% @chats.each do |chat| %>
        <% if chat.user_id == current_user.id %>
        <tbody>
          <tr>
            <th>
              <p style="margin-right: 20%; text-align: left;"><%= chat.message %></p>
            </th>
            <th></th>
          </tr>
        <% else %>
          <tr>
            <th></th>
            <th>
              <p style="margin-left: 20%; text-align: right;"><%= chat.message %></p>
            </th>
          </tr>
        </tbody>
        <% end %>
      <% end %>
    </table>

    <div class="container">
      <div class="row hoge">
        <%= form_with model: @chat, local: true do |f| %>
          <%= f.text_area :message, class:"form-control" %>
          <%= f.hidden_field :room_id %>
          <div class="row hoge m-3"><%= f.submit "送信", class:"btn btn-sm btn-success chat-btn px-5", include_blank: "200字まで" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>