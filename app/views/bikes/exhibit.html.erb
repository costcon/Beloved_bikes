 <div class="container">
   <div class="row hoge">
       <h1 class="heading08"><span>Your Bikes</span>出展バイク一覧</h1>
   </div>
    <div class="row hoge">
      <div calss="col-10 mx-auto">
        <%= link_to '出展する', new_bike_path,  class: "btn btn-outline-success" %>
      <% if @bikes.empty? %>
        <h4>出品中のバイクはありません</h4>
      <% else %>
       <table border="1" class="table">
         <thead class="table-primary">
           <tr>
             <th>名前</th></th>
             <th>価格(1day)</th>
             <th>排気量(cc)</th>
             <th></th>
           </tr>
         </thead>
         <tbody>
           <% @bikes.each do |bike| %>
           <tr>
             <td><%= bike.name %></td>
             <td><%= bike.price %></td>
             <td><%= bike.displacement %></td>
             <td>
              <%= link_to '編集する', edit_bike_path(bike), class: "btn btn-sm btn-success" %>
              <%= link_to '削除する', bike_path(bike), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
      <% end %>
      </div>
    </div>
 </div>