<div class="container">
  <div class="row">
    <div class='col-4 offset-1'>
      <h1 class="heading08"><span>All Bikes</span>出展されているバイク一覧</h1>
    </div>
    <%= render partial: 'layouts/flash' %>
  </div>
  <div class="row">
    <% @bikes.each do |bike| %>
      <% if bike.is_active == true %>
      <div class="col-md-3 pb-5">
        <div class="card border-0">
          <%= link_to bike_path(bike.id) do %>
          <div class="item_img">
            <%= attachment_image_tag(bike, :bike_image, height: "150", width: "100%", fallback: "no_image.jpg") %>
          </div>
          <div class="card-body text-center">
            <p class="card-title"><%= bike.name %></p>
          </div>
          <% end %>
        </div>
      </div>
      <%end%>
    <%end%>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p><%= paginate @bikes %></p>
      </div>
    </div>
  </div>
</div>
